/* pages/upload/upload.wxss */
.statusbar {
  background-color:#3bb1ff;
}

.navbar {
  height: 56rpx;
  padding: 16rpx 0;
  display: flex;
  justify-content: center;
  border-radius: 8rpx;
 background-color: #3bb1ff;
 position: relative;
}

.navbar .item {
  width: 300rpx;
  height: 100%;
  /* 垂直居中，三行 */
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 28rpx;

  color: #000000;
}
.goback{
  height: 100%;
  width: 60rpx;
  display: flex;
align-items: center;
position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding-left: 26rpx;
}
.navbar .return {
  width: 20rpx;
  height: 34rpx;
}
/* ************** */
.share_box{
  width: 100%;
  background: #cccccc;
  position: fixed;
  top: 0;
  z-index: 200;
}
.canvas{
  position: fixed;
  left:40rpx;
  top: 30px;
  border: solid 2rpx #3bb1ff;
  z-index: 202;
}

.share_box .share_but{
width: 100%;
position: absolute;
/* bottom: 80rpx; */
display: flex;
justify-content: space-around;
}
.share_box .share_but view{
  width: 334rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #fff;
}
.share_box .share_but .share_img{
  background: #3bb1ff;
}
/* ........ */

.content-text {
  background-color: #fff;
  min-height: 600px;
  padding-bottom: 40rpx;
}

.content-text .box {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 32rpx;
  /* padding-right: 32rpx; */
  border-bottom: 2rpx solid rgba(220, 220, 220, 1);
}

.content-text .last-child {
  border: none;
}
.gray{
  background-color: rgba(220, 220, 220, 0.6);
  height: 30rpx;
}
.content-text .alone{
  border: none;
}
.charge_explain {
  border-top: 30rpx solid rgba(220, 220, 220, 0.6);
  text-indent: 30rpx;
}

.charge_explain .explain {
  background-color: rgba(220, 220, 220, 0.6);
  height: 135px;
  width: 690rpx;
  border-radius: 6px;
  margin-left: 30rpx;
}
.charge_explain .explain textarea{
  box-sizing: border-box;
  padding: 0 10rpx;
  height: 100%;
}

.box1 {
  line-height: 100rpx;
  font-size: 30rpx;
}

.box2 {
  display: flex;
  justify-content: end;
  line-height: 100rpx;
}

.box .box2 .box2-A {
  font-size: 28rpx;
  color: rgba(130, 130, 130, 1);
}

.box2-B {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin: 20rpx 0 0 14rpx;
}

.box-gray {
  margin-left: 32rpx;
  padding-bottom: 30rpx;
}

.box-gray .box1 {
  line-height: 100rpx;
  font-size: 28rpx;
}

.box-gray .box3 {
  width: 195rpx;
  height: 152rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 10px;
  position: relative;
}

.box-gray .box3 .box3-A {
  width: 46rpx;
  height: 6rpx;
  background-color: rgba(220, 220, 220, 1);
  position: absolute;
  left: calc(50% - 23rpx);
  top: calc(50% - 3rpx);
}

.box-gray .box3 .box3-B {
  width: 6rpx;
  height: 46rpx;
  background-color: rgba(220, 220, 220, 1);
  position: absolute;
  top: calc(50% - 23rpx);
  left: calc(50% - 3rpx);
}

.box1_img {
  width: 195rpx;
  height: 152rpx;
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.box_img_del {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: -8rpx;
  right: -6rpx;
  z-index: 999;
}

.box_img {
  width: 195rpx;
  height: 152rpx;
}

.box-gray .box_flex {
  display: flex;
  flex-wrap: wrap;
}

