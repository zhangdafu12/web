/* pages/accredit/accredit.wxss */
page{
  background:#fff;
}
.nav {
  width: 100%;
  height: 126rpx;
  background:#3bb1ff;
  color: #fff;
  position: relative;

}
.modal-btn-cancel {
  width: 50%;
  text-align: center;
  border-right: 1px solid #dedede;
  color: #666;
}

.modal-btn-confirm {
  width: 50%;
  text-align: center;
  border-radius: 0;
  background-color: white;
  color: #ec5300;
}

/* 覆盖小程序 button 边框 */
.modal-btn-confirm::after {
  border: none;
}

.nav-text {
  height: 126rpx;
  line-height: 126rpx;
  text-align: center;
}

.goback{
  height: 126rpx;
  width: 60rpx;
  display: flex;
align-items: center;
position: absolute;
  
  left: 0rpx;
  padding-left: 26rpx;
}
.goback .return {
  width: 20rpx;
  height: 34rpx;
  
}
.store_icon{
display: block;
	width: 160rpx;
	height: 160rpx;
	border-radius: 30rpx;
  margin: 140rpx auto;


}
.content{
  padding: 10rpx 60rpx;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
	line-height: 36rpx;
	letter-spacing: 5rpx;
	color: #5a5a5a;
  text-indent: 40rpx;
}
.content text:first-child{
  color: #000;
  line-height: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
text-indent: 0rpx;
margin-bottom: 12rpx;
}
.options{
  width: 70%;
  margin: 140rpx auto;
  display: flex;
  justify-content: space-around;

}
.options text{
  display: inline-block;
	width: 220rpx;
	height: 80rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  color: #fff;
line-height: 80rpx;
text-align: center;
letter-spacing: 4rpx;
}
.options .refuse{

	background-color: #dcdcdc;

}
.options .allowed{

	background-color: #ff9821;

}


/* 权限对话框 */
.modal-mask {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  border-radius: 36rpx;
  background: white;
}

.modal-title {
  margin: 25rpx 0;
  font-size: 36rpx;
  text-align: center;
  color: #030303;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-footer {
  height: 86rpx;
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  line-height: 86rpx;
  border-top: 1px solid #dedede;
}

.modal-btn-cancel {
  width: 50%;
  text-align: center;
  border-right: 1px solid #dedede;
  color: #666;
}

.modal-btn-confirm {
  width: 50%;
  text-align: center;
  border-radius: 0;
  background-color: white;
  color: #ec5300;
}