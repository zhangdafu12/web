/* pages/wallet/wallet.wxss */
page{
  background: #f2f2f2;

}
.wallet{
  width: 100%;
  height:300rpx;
  padding: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: #fff;
  /* align-items: center; */
}
.wallet text{
  display: inline-block;
  text-align: center;
}
.wallet .tit{
  text-align: left;
  font-size: 40rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
  padding-left: 40rpx;
}
.wallet .number{
font-size: 32rpx;
}
.but{
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  background: #3bb1ff;
  border-radius: 10rpx;
margin: 0 auto;
}