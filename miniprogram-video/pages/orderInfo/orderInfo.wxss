.text {
  background-color: #fff;
  padding: 22rpx 32rpx 16rpx 32rpx;
  font-size: 24rpx;
  color: rgba(50, 50, 50, 1);
  margin-bottom: 20rpx;
}

.text view {
  margin-bottom: 8rpx;
}

.rule {
  padding: 28rpx 32rpx 32rpx 32rpx;
  background-color: #fff;
}

.rule .rule1 {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.rule .rule2 {
  font-size: 24rpx;
  color: rgba(50, 50, 50, 1);
}

.rule .rule2 view {
  margin-top: 6rpx;
}

button {
  width: 600rpx;
  height: 80rpx;
  background-color: #ff9821;
  border-radius: 60rpx;
  color: #fff;
  margin: 70rpx 75rpx 0 75rpx;
  text-align: center;
  font-size: 32rpx;
}

