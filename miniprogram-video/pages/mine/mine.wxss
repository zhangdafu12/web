/* pages/mine/mine.wxss */

.mine {
  background-color: #f2f2f2;
  /* margin:0 0 0 10rpx; */
}

.private {
  background-color: #3bb1ff;
  padding: 0 0 30px 20px;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 10px;
}

.private>image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.private>view {
  width: 100px;
  height: 60px;
  padding: 5px 0 0 15px;
}

.screen .myname {
  font-weight: bold;
}

.screen .site .site-A {
  font-size: 12px;
}

.screen .site image {
  width: 16px;
  height: 16px;
  vertical-align: hiddle;
  margin-left: 5px;
}

/* ************************************* */

.box {
  background-color: #fff;
  margin-bottom: 10px;
}

.box>view, .tickling {
  height: 45px;
  border-bottom: 1px solid #f8f6f6;
  margin-left: 10px;
  line-height: 45px;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}

.box image, .tickling image {
  width: 24px;
  height: 24px;
  vertical-align: middle;
  margin-right: 5px;
}

.box>.learn>.right>text {
  color: rgba(255, 141, 26, 1);
  font-size: 17px;
  font-weight: bold;
}

.tickling {
  background-color: #fff;
  margin: 0;
  padding-left: 10px;
}



/* 遮罩层***************************************************** */

.mask {
  display: none;
}

.bg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 999;
  opacity: 0.70;
  /* 遮罩层IE特有属性
  filter: alpha(opacity=70); */
}

.login{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 14rpx;

}


.show {
  text-align: center;
  position: absolute;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 55%;
  background-color: white;
  z-index: 1002;
  overflow: auto;
  padding-top: 25px;
  border-radius: 5px;
}
.show .show-bar{
  font-size: 17px;
  font-weight: bold;
  margin-bottom: 20px;
}
.show image {
  text-align: center;
  width: 60%;
  height: 60%;
}
.show .show-fot{
  font-size: 12px;
  margin-top: 10px;
  color: rgba(128,128,128,1);
}
.show .show-fot text{
  color: rgba(0,186,98,1);
}
