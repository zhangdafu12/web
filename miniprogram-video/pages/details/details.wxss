.info {
  display: flex;
  padding-top: 8rpx;
  padding-bottom: 24rpx;
  background: #3bb1ff;
}

.info .info-cont {
  position: relative;
  overflow: hidden;
  	width: 180rpx;
	height: 180rpx;
   margin-left: 22rpx;
   border-radius: 22rpx;
}
.info-cont .apply{
  position: absolute;
  bottom: 0;
  width: 180rpx;
	height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color:#fff;
	background-color: rgba(0, 0, 0, 0.575);
  font-size: 22rpx;
}

.info .avatar {
  flex-shrink: 0;
  width: 180rpx;
  height: 180rpx;
  border-radius: 22rpx;
}

.info .content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 0 20rpx;
  font-size: 12px;
}

.content .name {
  font-size: 28rpx;
  font-weight: bold;
}

.content .collect-and-like {
  display: flex;
  justify-content: flex-start;
}

.collect-and-like .collect {
  margin-right: 40rpx;
}

.collect-and-like .icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.btn-collect {
  position: absolute;
  right: 24rpx;
  width: 100rpx;
  height: 60rpx;
  padding: 0 0 !important;
  color: rgba(0, 0, 0, 1) !important;
  background-color: rgba(0, 0, 0, 0) !important;
  border: rgba(0, 0, 0, 1) solid 1px !important;
}

.content .icon-detail {
  width: 30rpx;
  height: 30rpx;
  vertical-align: text-bottom;
}

.videos {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
  padding: 30rpx 30rpx 0 30rpx;
  background-color: #fff;
}

.title {
  width: 100%;
  height: 80rpx;
  font-weight: bold;
}

.video-item {
  position: relative;
  width: 48.5%;
  height: 50vw;
  margin-bottom: 24rpx;
  /* padding: 0 5rpx; *//* box-sizing: border-box; *//* 解决 padding 导致 flex 换行 */
}

.video-item .capture {
  width: 100%;
  height: 100%;
}

.video-item .like {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  width: 120rpx;
}

.video-item .icon-like {
  /* flex-shrink: 0; */
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
}

.video-item .number {
  /* flex-grow: 1; */
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}


/* 活动列表 */
.activityInfo{
width: 100%;
height: 180rxp;
background: #fff;
display: flex;
justify-content: space-between;
padding:10rpx 30rpx;
border: solid 1rpx #fcfcfc;
margin-top: 30rpx;
font-size: 28rpx;
box-sizing: border-box;
}
.activityInfo view{
display: flex;

}
.activityInfo view text{
display: inline-block;
line-height: 44rpx;
}
.activityInfo view text:first-child{
font-size: 34rpx;
font-weight: bold;
}

.activityInfo view text.details{
width: 150rpx;
height: 60rpx;
background: #FF6666;
color: #fff;
font-size: 28rpx;
line-height: 60rpx;
text-align: center;
font-weight: normal;
float: right;
border-radius: 10rpx
}

.activityInfo>view{
justify-content: space-between;
flex-direction: column;
}
.details_but{
display: flex;
flex-direction: column;
justify-content: space-between;
}