.box_cont {
  margin: 24rpx 31rpx 0 31rpx;
}

.box {
  width: 688rpx;
  height: 550rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.03);
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}
.butt{

width: 600rpx;
height: 80rpx;
line-height: 80rpx;
background: #3bb1ff;
border-radius: 10rpx;
text-align: center;
font-size: 32rpx;
margin:60rpx auto;
color: #fff;

}
.orderBox{
  height:260rpx;
 display: flex;
   padding: 0 40rpx;
  justify-content: space-around;
  flex-direction: column;
  font-size: 26rpx;
  padding-top:18rpx;
}

.orderBox .but{
display: inline-block;
width: 142rpx;
height: 60rpx;
background: #3bb1ff;
border-radius: 20rpx;
text-align: center;
line-height: 60rpx;
float: right;
margin-right: 40rpx;
}
.store {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 0 20rpx 0;
}

.store>view {
  display: flex;
  align-items: center;
}

.store image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.store .store_name {
  display: inline-block;
  font-size: 28rpx;
}

.store .time {
  font-size: 22rpx;
  color: #828282;
}

.cuisine-cont {
  display: flex;
  justify-content: flex-start;
  padding-left: 30rpx;
}

.cuisine-cont image {
  width: 216rpx;
  height: 168rpx;
  border-radius: 10rpx;
}

.cuisine_name {
  font-size: 28rpx;
  margin-bottom: 42rpx;
  margin-left: 20rpx;
}

.cuisine {
 flex: 1;
}

.original_price {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #323232;
}

.price {
  margin-left: 16rpx;
  display: flex;
  justify-content: space-between;
}

.current_price {
  font-size: 36rpx;
  color: #ff4040;
  margin-top: 4rpx;
}

.state {
  width: 148rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background-color: #ff4040;
  border-radius: 100rpx;
  color: #fff;
  font-size: 24rpx;
}

.store .user_img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
